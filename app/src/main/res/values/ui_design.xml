<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Spacing/Dimensions -->
    <dimen name="Ui_SpacingXS">4dp</dimen>
    <dimen name="Ui_SpacingS">8dp</dimen>
    <dimen name="Ui_SpacingM">12dp</dimen>
    <dimen name="Ui_SpacingL">16dp</dimen>
    <dimen name="Ui_SpacingXL">24dp</dimen>
    <dimen name="Ui_SpacingXXL">32dp</dimen>

    <dimen name="Ui_CardRadius">16dp</dimen>
    <dimen name="Ui_CardElevation">4dp</dimen>
    <dimen name="Ui_ButtonRadius">12dp</dimen>

    <dimen name="Ui_TitleTextSize">18sp</dimen>
    <dimen name="Ui_BodyTextSize">14sp</dimen>
    <dimen name="Ui_CaptionTextSize">12sp</dimen>
    <dimen name="Ui_ButtonTextSize">15sp</dimen>

    <!-- Colors -->
    <color name="Ui_Primary">#6200EE</color>
    <color name="Ui_PrimaryVariant">#3700B3</color>
    <color name="Ui_Secondary">#03DAC6</color>
    <color name="Ui_Background">#F5F5F5</color>
    <color name="Ui_Surface">#FFFFFF</color>
    <color name="Ui_CardBorder">#E0E0E0</color>
    <color name="Ui_TextPrimary">#212121</color>
    <color name="Ui_TextSecondary">#757575</color>
    <color name="Ui_TextHint">#9E9E9E</color>
    <color name="Ui_Error">#B00020</color>
    <color name="Ui_HeaderBg">#FAFAFA</color>

    <!-- Task Card Style -->
    <style name="Ui_TaskCard">
        <item name="cardCornerRadius">@dimen/Ui_CardRadius</item>
        <item name="cardElevation">@dimen/Ui_CardElevation</item>
        <item name="cardBackgroundColor">@color/Ui_Surface</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/Ui_CardBorder</item>
        <item name="android:layout_marginStart">@dimen/Ui_SpacingL</item>
        <item name="android:layout_marginEnd">@dimen/Ui_SpacingL</item>
        <item name="android:layout_marginTop">@dimen/Ui_SpacingS</item>
        <item name="android:layout_marginBottom">@dimen/Ui_SpacingS</item>
    </style>

    <!-- Text Styles -->
    <style name="Ui_TaskTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/Ui_TitleTextSize</item>
        <item name="android:textColor">@color/Ui_TextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Ui_TaskDescription" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/Ui_BodyTextSize</item>
        <item name="android:textColor">@color/Ui_TextSecondary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Ui_HeaderTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/Ui_TextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Button Styles -->
    <style name="Ui_ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/Ui_ButtonRadius</item>
        <item name="android:textSize">@dimen/Ui_ButtonTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/Ui_SpacingM</item>
        <item name="android:paddingBottom">@dimen/Ui_SpacingM</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Ui_ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/Ui_ButtonRadius</item>
        <item name="android:textSize">@dimen/Ui_ButtonTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/Ui_SpacingM</item>
        <item name="android:paddingBottom">@dimen/Ui_SpacingM</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Ui_ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/Ui_ButtonRadius</item>
        <item name="android:textSize">@dimen/Ui_BodyTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Input Styles -->
    <style name="Ui_TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/Ui_ButtonRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/Ui_ButtonRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/Ui_ButtonRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/Ui_ButtonRadius</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_marginBottom">@dimen/Ui_SpacingL</item>
    </style>

    <style name="Ui_EditText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/Ui_BodyTextSize</item>
        <item name="android:textColor">@color/Ui_TextPrimary</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Container Styles -->
    <style name="Ui_HeaderContainer">
        <item name="android:background">@color/Ui_HeaderBg</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">@dimen/Ui_SpacingL</item>
    </style>

    <style name="Ui_ContentContainer">
        <item name="android:background">@color/Ui_Background</item>
    </style>
</resources>
